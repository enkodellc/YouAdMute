{
    "name": "YouMute",
    "short_name": "YouMute",
    "description": "Automatically mute and skip YouTube\u2122 video ads",
    "version": "0.1.8",
    "manifest_version": 3,
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "matches": [ "https://www.youtube.com/*" ],
            "js": [ "inject.js" ],
            "css": [ "inject.css" ]
        }
    ],
    "action": {
        "default_title": "YouMute",
        "default_popup": "popup.html"
    },
    "content_security_policy": {}
}